    ubuntu.vm.provision "ssh_keys_provision-4", type: "file",
      source: "files/id_rsa_vagrant.pub", destination: "/tmp/id_rsa_vagrant.pub"
    ubuntu.vm.provision "ssh_keys_provision-4-1", type: "shell",
